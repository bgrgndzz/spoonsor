extends ../partials/head
block content
  .main-info
    .user-image(style="background-image: url('/res/uploads/" + user.profilepicture + "')")
    h1.user-name= user.name
    if edit
      a(href="#").edit-button
        i.fas.fa-pen
        |  
        h3 Profili düzenle
    if user.description
      p.user-description= user.description
  .user-details.user-details--current
    - for (let i = 0; i <= 7; i++)
      .user-detail
        img.user-detail-image(src="/res/images/user.svg")
        span.user-detail-name Detay
        span.user-detail-value Değer
  h2.user-detail-old-heading Önceki yıla ait
  .user-details.user-details--old
    - for (let i = 0; i <= 4; i++)
      .user-detail
        img.user-detail-image(src="/res/images/user.svg")
        span.user-detail-name Detay
        span.user-detail-value Değer
  if self
    .modal-wrapper
      .overlay.close-modal
      .modal
        i.fas.fa-times.modal-close-button.close-modal
