extends ../partials/head
block content
  .users-wrapper
    .search-users
      input.field(type="text", name="searchusers", placeholder="Ara")
      i.fas.fa-search
    ul.users
      each messagedUser in messagedUsers
        li.user
          input.user-id(type="hidden", name="user-id", value=messagedUser.user.id)
          .user-image(style="background-image: url('/res/uploads/" + messagedUser.user.profilepicture + "')")
          .user-content
            h2.user-name= messagedUser.user.name
            p.user-message= messagedUser.message
  .messages-wrapper
    span.messages-background-notice Mesajları görüntülemek için sol taraftan bir görüşme seçin
  .user-wrapper
  .modal-wrapper
    .overlay.close-modal
    .modal
      i.fas.fa-times.modal-close-button.close-modal
      .modal-image-wrapper
        .modal-image(style="background-image: url('')")
        h2.modal-title
      .modal-sponsorships
      p.modal-description